<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/songs_menu_foreground_primary">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exo_play_pause_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
                android:id="@+id/exo_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/pause_play_btn"
                android:src="@drawable/baseline_play_arrow_24"
                android:tint="@color/app_secondary_color"
                android:padding="5dp"
                android:layout_margin="5dp"/>
        <ImageView
                android:id="@+id/exo_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/pause_play_btn"
                android:src="@drawable/outline_pause_24"
                android:tint="@color/app_secondary_color"
                android:padding="5dp"
                android:layout_margin="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:id="@+id/exo_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/exo_play_pause_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:src="@drawable/baseline_skip_next_24"
            android:tint="@color/app_secondary_color"
            android:padding="5dp"
            android:background="@drawable/media_button_background"/>
    <ImageView
            android:id="@+id/exo_prev"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/exo_play_pause_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            android:src="@drawable/baseline_skip_previous_24"
            android:tint="@color/app_secondary_color"
            android:padding="5dp"
            android:background="@drawable/media_button_background"
            android:clickable="true"
            android:focusable="true"/>
    <ImageView
            android:id="@+id/exo_shuffle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/exo_prev"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_shuffle_24"
            android:tint="@color/app_secondary_color"
            android:background="@drawable/media_button_background"/>
    <ImageView
            android:id="@+id/exo_repeat_toggle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/exo_next"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_loop_24"
            android:tint="@color/app_secondary_color"
            android:background="@drawable/media_button_background"/>
    <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.8"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"
            app:unplayed_color="@color/unplayed_media_color"
            app:played_color="@color/app_secondary_color"
            app:scrubber_color="@color/media_scrubber_color"
            app:buffered_color="@color/buffered_media_color"/>
    <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exo_progress"
            app:layout_constraintLeft_toLeftOf="@id/exo_progress"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:textColor="@color/media_duration_text_color"/>
    <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exo_progress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/exo_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="1"
            android:textColor="@color/media_duration_text_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>