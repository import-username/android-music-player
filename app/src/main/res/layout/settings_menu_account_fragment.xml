<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/songs_menu_foreground_primary"
        android:focusable="true"
        android:clickable="true">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/songs_menu_foreground_primary">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/account_settings_toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:navigationIcon="@drawable/outline_chevron_left_black_48"
                android:theme="@style/SettingsMenuToolbar"
                app:title="@string/account_settings_toolbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/account_settings_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/account_settings_toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/account_settings_email_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp">
                <TextView
                        android:id="@+id/account_settings_email_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.06"
                        android:text="@string/account_settings_email_title"
                        app:layout_constraintVertical_bias="0.1"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                <TextView
                        android:id="@+id/account_settings_email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/account_settings_email_title"
                        app:layout_constraintLeft_toRightOf="@id/account_settings_email_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/account_settings_email_title"
                        android:textSize="18sp"
                        android:textColor="@color/grey"
                        android:text="..."
                        app:layout_constraintHorizontal_bias="1"
                        android:maxWidth="280dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"/>
                <TextView
                        android:id="@+id/account_settings_password_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/account_settings_email_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="Password"
                        android:layout_marginTop="50dp"
                        app:layout_constraintVertical_bias="0.05"
                        app:layout_constraintHorizontal_bias="0.06"/>
                <TextView
                        android:id="@+id/account_settings_password_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/account_settings_password_title"
                        app:layout_constraintLeft_toRightOf="@id/account_settings_password_title"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/account_settings_password_title"
                        android:textSize="18sp"
                        android:textColor="@color/grey"
                        android:text="***********"
                        app:layout_constraintHorizontal_bias="1"
                        android:maxWidth="280dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"/>
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_settings_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toBottomOf="@id/account_settings_password_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"
                        app:layout_constraintVertical_bias="0.2"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/white"
                        android:background="@drawable/create_item_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:text="@string/account_settings_edit_button_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
