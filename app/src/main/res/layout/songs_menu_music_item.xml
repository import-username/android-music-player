<?xml version="1.0" encoding="utf-8"?>
<!-- TODO - add settings button to each song item that opens a popup menu -->
<!-- TODO - add layout option to change to smaller song item buttons -->
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/songs_menu_music_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="400dp"
        android:minWidth="280dp"
        app:layout_constraintWidth_percent="0.80"
        android:layout_height="130dp"
        android:background="@drawable/music_item_button"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/songs_menu_music_item_logo_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            android:background="@color/songs_menu_song_default_icon_background">
        <ImageView
                android:id="@+id/songs_menu_music_item_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                android:tint="@color/songs_menu_song_default_icon"
                android:src="@drawable/outline_music_note_24"/>
        <ImageView
                android:id="@+id/songs_menu_music_item_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/songs_menu_music_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.55"
            app:layout_constraintLeft_toRightOf="@id/songs_menu_music_item_logo_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0"
            android:textColor="@color/white"
            android:maxLines="2"
            android:textSize="18sp"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>
    <ImageButton
            android:id="@+id/music_item_options_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/songs_menu_music_item_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:src="@drawable/baseline_more_vert_black_36"
            android:tint="@color/white"
            style="?android:attr/borderlessButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>