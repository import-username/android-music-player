<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/songs_menu_music_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="380dp"
        android:minWidth="280dp"
        app:layout_constraintWidth_percent="0.80"
        android:layout_height="130dp"
        android:background="@color/songs_menu_foreground_primary">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/songs_menu_music_item_logo_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            android:background="@color/songs_menu_song_default_icon_background">
        <ImageView
                android:id="@+id/songs_menu_music_item_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                android:tint="@color/songs_menu_song_default_icon"
                android:src="@drawable/outline_music_note_24"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/songs_menu_music_item_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/songs_menu_music_item_logo_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.2"
            android:textColor="@color/white"
            android:text="TEST TITLE 135295HT"
            android:textSize="18sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>