<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_playlist_menu_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/songs_menu_background_primary"
        android:focusable="true"
        android:clickable="true">
    <TextView
            android:id="@+id/create_playlist_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/create_playlist_menu_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.02"/>
    <com.importusername.musicplayer.views.CreateSongImageLayout
            android:id="@+id/create_playlist_menu_image_container"
            android:minWidth="180dp"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.6"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.08"
            android:background="@color/songs_menu_song_default_icon_background">
        <ImageView
                android:id="@+id/create_image_default"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                android:tint="@color/songs_menu_song_default_icon"
                android:src="@drawable/outline_music_note_24"/>
        <ImageView
                android:id="@+id/create_image_custom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                android:visibility="gone"/>
        <ImageView
                android:id="@+id/remove_playlist_thumbnail_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0.08"
                android:src="@drawable/outline_close_24"
                android:tint="@color/app_secondary_variant_color"
                android:visibility="gone"/>
    </com.importusername.musicplayer.views.CreateSongImageLayout>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/create_playlist_item_title_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/create_playlist_menu_image_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.02"
            android:backgroundTint="@color/app_secondary_variant_color"
            android:hint="@string/create_playlist_item_title_hint"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_playlist_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:minWidth="160dp"
            android:maxWidth="250dp"
            android:layout_marginTop="20dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/create_item_button"
            android:layout_marginBottom="10dp"
            android:text="@string/create_playlist_button_text"
            android:textColor="@color/white"
            android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>