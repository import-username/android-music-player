<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="170dp"
        android:layout_height="230dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/songs_menu_foreground_primary"
        android:id="@+id/recently_played_song_container">
    <androidx.cardview.widget.CardView
            android:id="@+id/recently_played_item_cardview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/grey">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recently_played_item_thumbnail_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/recently_played_thumbnail_default"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/outline_music_note_24"
                    android:tint="@color/black"
                    android:visibility="visible"/>
            <ImageView
                    android:id="@+id/recently_played_thumbnail_custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
            android:id="@+id/recently_played_song_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recently_played_item_cardview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            android:textAlignment="center"
            android:text="..."
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>